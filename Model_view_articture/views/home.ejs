<%- include('partials/head') %>
  </head>

  <body class="bg-gray-100 font-sans">
    <%- include('partials/nav') %>
      <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
        <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
          Here are our registered homes:
        </h2>
        <!-- Grid container with 3 columns -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% registeredHomes.forEach(home=> { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <img
                src="https://images.unsplash.com/photo-1568605114967-8130f3a36994?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80"
                alt="<%= home.housename %>" class="w-full h-40 object-cover">
              <div class="p-4">
                <h3 class="text-lg font-semibold text-gray-800 mb-2">
                  <%= home.housename %>
                </h3>
                <p class="text-gray-600 mb-3 text-sm">
                  <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
                  <%= home.location %>
                </p>
                <div class="flex justify-between items-center mb-4">
                  <span class="text-lg font-bold text-green-600">â‚¹<%= home.price %> / night</span>
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                      class="w-4 h-4 text-yellow-400 mr-1">
                      <path fill-rule="evenodd"
                        d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                        clip-rule="evenodd" />
                    </svg>
                    <span class="text-gray-700 font-medium text-sm">
                      <%= home.rating %>
                    </span>
                  </div>
                </div>
                <button
                  class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-3 rounded-md transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 text-sm">
                  Book Now
                </button>
              </div>
            </div>
            <% }) %>
        </div>
      </main>
  </body>
  </html>