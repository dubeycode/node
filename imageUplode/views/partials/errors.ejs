 
 <% if (errors && errors.length > 0) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <strong class="font-bold">Errors:</strong>
        <ul class="mt-2 ml-4 list-disc">
          <% errors.forEach(err => { %>
            <li><%= err %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>