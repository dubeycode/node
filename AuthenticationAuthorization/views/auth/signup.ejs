<%- include('../partials/head') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body class="bg-gray-100">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md max-w-2xl">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800 border-b pb-4">
      Create Your Account
    </h1>

    <!-- Error Box -->
    <!-- <% if (errors && errors.length > 0) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <strong class="font-bold">Errors:</strong>
        <ul class="mt-2 ml-4 list-disc">
          <% errors.forEach(err => { %>
            <li><%= err %></li>
          <% }) %>
        </ul>
      </div>
    <% } %> -->
    <% include('../partials/errors')%>

    <form action="/signup" method="POST" class="max-w-md mx-auto">

      <!-- Name fields -->
      <div class="flex gap-4 mb-4">
        <div class="flex-1">
          <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
          <div class="relative">
            <i class="fas fa-user absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500"></i>
            <input 
              type="text"
              name="firstName"
              placeholder="John"
              value="<%= oldInput && oldInput.firstName ? oldInput.firstName : '' %>"
              class="w-full pl-10 px-4 py-2 border rounded-md focus:ring-2 focus:ring-red-500 focus:border-red-500"
              required>
          </div>
        </div>

        <div class="flex-1">
          <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
          <div class="relative">
            <i class="fas fa-user absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500"></i>
            <input 
              type="text"
              name="lastName"
              placeholder="Doe"
              value="<%= oldInput && oldInput.lastName ? oldInput.lastName : '' %>"
              class="w-full pl-10 px-4 py-2 border rounded-md focus:ring-2 focus:ring-red-500 focus:border-red-500">
          </div>
        </div>
      </div>

      <!-- Email -->
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
        <div class="relative">
          <i class="fas fa-envelope absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500"></i>
          <input
            type="email"
            name="email"
            placeholder="your.email@example.com"
            value="<%= oldInput && oldInput.email ? oldInput.email : '' %>"
            class="w-full pl-10 px-4 py-2 border rounded-md focus:ring-2 focus:ring-red-500 focus:border-red-500"
            required>
        </div>
      </div>

      <!-- Password -->
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <div class="relative">
          <i class="fas fa-lock absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500"></i>
          <input
            type="password"
            name="password"
            placeholder="Enter Your Password"
            value="<%= oldInput && oldInput.password ? oldInput.password : '' %>"
            class="w-full pl-10 px-4 py-2 border rounded-md focus:ring-2 focus:ring-red-500 focus:border-red-500"
            required>
        </div>
      </div>

      <!-- Confirm Password -->
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
        <div class="relative">
          <i class="fas fa-lock absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500"></i>
          <input
            type="password"
            name="confirmPassword"
            placeholder="Confirm Your Password"
            value="<%= oldInput && oldInput.confirmPassword ? oldInput.confirmPassword : '' %>"
            class="w-full pl-10 px-4 py-2 border rounded-md focus:ring-2 focus:ring-red-500 focus:border-red-500"
            required>
        </div>
      </div>

      <!-- User Type -->
      <div class="mb-5 p-4 bg-gray-50 rounded-md border border-gray-200">
        <p class="text-sm font-medium text-gray-700 mb-2">I want to register as:</p>

        <div class="flex space-x-10">
          <label class="inline-flex items-center cursor-pointer">
            <input 
              type="radio"
              name="userType"
              value="guest"
              <%= oldInput && oldInput.userType === "guest" ? "checked" : "" %>
            />
            <span class="ml-2">Guest</span>
          </label>

          <label class="inline-flex items-center cursor-pointer">
            <input 
              type="radio"
              name="userType"
              value="host"
              <%= oldInput && oldInput.userType === "host" ? "checked" : "" %>
            />
            <span class="ml-2">Host</span>
          </label>
        </div>
      </div>

      <!-- Terms -->
      <div class="mb-6">
        <label class="inline-flex items-center cursor-pointer">
          <input 
            type="checkbox"
            name="terms"
            <%= oldInput && oldInput.terms ? "checked" : "" %>
            required
          />
          <span class="ml-2">I agree to the 
            <a class="text-red-500 hover:underline" href="#">terms and conditions</a>
          </span>
        </label>
      </div>

      <!-- Submit -->
      <button type="submit" class="w-full bg-red-500 text-white py-3 rounded-md hover:bg-red-600 focus:ring-4 focus:ring-red-300 font-medium transition duration-300 flex items-center justify-center">
        <span>Register</span>
        <i class="fas fa-arrow-right ml-2"></i>
      </button>

      <p class="text-center mt-4 text-gray-600">
        Already have an account? <a href="/login" class="text-red-500 hover:underline">Log in</a>
      </p>
    </form>
  </main>
</body>
</html>
