<%- include('../partials/head') %>
  </head>

  <body class="bg-gray-100 font-sans">
    <%- include('../partials/nav') %>
      <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
        <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
          Here are our registered homes:
        </h2>
        <!-- Grid container with 3 columns -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% registeredHomes.forEach(home=> { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <img
                src="<%= home.photo %>"
                alt="<%= home.housename %>" class="w-full h-40 object-cover">
              <div class="p-4">
                <h3 class="text-lg font-semibold text-gray-800 mb-2">
                  <%= home.housename %>
                </h3>
                <p class="text-gray-600 mb-3 text-sm">
                  <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
                  <%= home.location %>
                </p>
                <div class="flex justify-between items-center mb-4">
                  <span class="text-lg font-bold text-green-600">₹<%= home.price %> / night</span>
                  <div class="flex items-center">
                    <p>⭐</p>
                    <span class="text-gray-700 font-medium text-sm">
                      <%= home.rating %>
                    </span>
                  </div>
                </div>
                <a class="bg-blue-300 p-2" href="/homes/<%=home._id %>">Details</a>
                  <%- include('../partials/favourite', {home: home}) %>
              </div>
            </div>
            <% }) %>
        </div>
      </main>
  </body>
  </html>